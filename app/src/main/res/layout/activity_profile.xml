<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ToParkMe.activities.Activity_Profile"
    android:keepScreenOn="true"
    >

    <ImageView
        android:id="@+id/park_IMG_profile_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        >

    </ImageView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/park_Btn_profile_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:text="חזור">

    </com.google.android.material.button.MaterialButton>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">


        <TextView
            android:id="@+id/park_profile_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="פרופיל"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/white"
            android:textSize="60sp">

        </TextView>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/park_IMG_profile_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginTop="100dp"
            android:layout_marginBottom="50dp"
            android:background="@color/white"
            android:clickable="true"
            app:shapeAppearanceOverlay="@style/roundedImageViewRounded"></com.google.android.material.imageview.ShapeableImageView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/park_Btn_profile_change_nickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="החלף כינוי חיבה"
            app:cornerRadius="50dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/park_Btn_profile_change_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="החלף שם פרטי"
            app:cornerRadius="50dp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/park_Btn_profile_import_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="שמור תמונה נבחרת"
            app:cornerRadius="50dp" />


    </LinearLayout>

</RelativeLayout>
</layout>
